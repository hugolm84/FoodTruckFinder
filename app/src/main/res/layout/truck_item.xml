<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:id="@+id/item">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/leftImage"
        android:src="@drawable/ic_call_grey600_48dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="+46 070-49 15 129"
        android:id="@+id/title"
        android:layout_alignTop="@+id/leftImage"
        android:layout_toEndOf="@+id/leftImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mobile"
        android:id="@+id/subtitle"
        android:layout_alignBottom="@+id/leftImage"
        android:layout_alignStart="@+id/title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightImage"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_message_grey600_24dp"
        android:layout_weight="0.07"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/divider"
        android:src="@color/divider"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/rightImage"
        android:layout_marginLeft="56dp" />

</RelativeLayout>
