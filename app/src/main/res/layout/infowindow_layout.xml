<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="#fff"
        android:layout_marginRight="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/bunbun_prof"
            app:border_width="2dp"
            app:border_color="@color/primary"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />


        <LinearLayout
            android:id="@+id/info_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_alignTop="@+id/profile_image"
            android:layout_alignParentEnd="false"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/twitter_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="\@Curbside" />

            <TextView
                android:id="@+id/tweet_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="2 timmar sedan" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/tweet_body"
                android:text="Vi står på Lindhagensgatan 91, mitt emot 98!" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
